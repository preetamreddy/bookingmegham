<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :agency %><br />
		<% if @user.agency_id %>
			<%= f.collection_select(:agency_id,
							Agency.find_all_by_id(@user.agency_id), :id, :name) %>
		<% else %>
			<%= f.collection_select(:agency_id,
							Agency.order('name').find_all, :id, :name) %>
		<% end %>
	</div>
  <div class="field">
    <%= f.label :advisor_id %><br />
		<% if @user.advisor_id %>
			<%= f.collection_select(:advisor_id,
						Advisor.find_all_by_id(@user.advisor_id), :id, :name) %>
		<% else %>
			<%= f.collection_select(:advisor_id,
						Advisor.order('name').find_all, :id, :name) %>
		<% end %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
