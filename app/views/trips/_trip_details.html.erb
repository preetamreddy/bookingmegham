<table width="100%" cellpadding="5" border="1" style="border-spacing:0;border-collapse:collapse;border-color:#CFCCCA">
	<tr>						
		<th width="18%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Trip ID</th>
		<th width="18%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Trip Name</th>
		<th width="18%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Number of people</th>
		<th width="16%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Rooms</th>
		<th width="12%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Food Preferences</th>
		<th width="20%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Comments</th>
		<th width="16%" align="left" style="font-size:10pt;background:#605C59;color:#FFF">Total Price</th>
	</tr>
	<tr>
		<td align="right" style="font-size:10ppt;padding:2px 4px">
			<%= trip.id %>
		</td>
		<td align="left" style="font-size:10pt;padding:2px 4px">
			<%= trip.name %><br/>
			<%= l trip.start_date %> to <%= l trip.end_date %><br/>
			(<%= trip.number_of_days %> days)
		</td>
		<td align="left" style="font-size:10pt;padding:2px 4px">
			Adults: <%= trip.number_of_adults %><br/>
			Children (btw 5 & 12): <%= trip.number_of_children_between_5_and_12_years %><br/>
			Children below 5: <%= trip.number_of_children_below_5_years %><br/>
			Drivers: <%= trip.number_of_drivers %>
		</td>
		<td align="left" style="font-size:10pt;padding:2px 4px">
			<% trip.rooms.each do |room| %>
				<%= pluralize(room.number_of_rooms, room.occupancy) %> @ 
				<%= room.number_of_adults %>
				<%= (" + " + room.number_of_children_between_5_and_12_years.to_s) if room.number_of_children_between_5_and_12_years != 0 %> / room<br/>
			<% end %>
			<% if trip.number_of_children_below_5_years != 0 %>
				Children below 5: <%= trip.number_of_children_below_5_years %><br/>
			<% end %>
			<% if trip.number_of_drivers != 0 %>
				Drivers: <%= trip.number_of_drivers %>
			<% end %>
			<% if trip.rooms.empty? and trip.number_of_trekkers != 0 %>
				Number of trekkers: <%= trip.number_of_trekkers %>
			<% end %>
		</td>
		<td align="left" style="font-size:10pt;padding:2px 4px"><%= trip.food_preferences %></td>
		<td align="left" style="font-size:10pt;padding:2px 4px;white-space:pre-wrap"><%= trip.comments %></td>
		<td align="left" style="font-size:10pt;padding:2px 4px">
			<%= number_to_currency(trip.final_price) %><br/>
			<% if trip.payment_status != Trip::FULLY_PAID %>
				<% if trip.paid > 0 %>
					Paid: <%= number_to_currency(trip.paid) %><br/>
					Balance: <%= number_to_currency(trip.balance_payment) %><br/>
				<% end %>
				Pay by: <%= l trip.pay_by_date if trip.pay_by_date %>
			<% end %>
		</td>
	</tr>
</table>
