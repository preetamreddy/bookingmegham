<%= nested_form_for(@trip) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this Trip from being saved:</h2>
      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :id, "Trip ID" %><br />
		<p><span class="highlight">
			<%= @trip.id %>
		</span></p>
	<% end %>
	<%= hidden_div_if(true, class: "field") do %>
    <%= f.label :customer_type %><br />
    <%= f.text_field :customer_type %>
	<% end %>
 	<div class="field">
   	<%= f.label :customer_id, "Customer" %><br />
		<% if @trip.customer_id %>
    	<%= f.collection_select(:customer_id, 
						@trip.customer_type.classify.constantize.scoped_by_account_id(current_user.account_id).
							find_all_by_id(@trip.customer_id), :id, :name) %>
		<% end %>
  </div>
  <div class="field">
    <%= f.label :name, "Trip tag" %><br />
    <%= f.text_field :name, 
      :placeholder => @trip.customer_type == Trip::GUEST ? 'Trip name' : 'Guest name', size: 30 %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
   	<%= f.date_select :start_date, :start_year => Time.now.year,
			:end_year => Time.now.year + 1, :prompt => true, 
			:disabled => (@trip.payment_status != Trip::NOT_PAID and !@trip.new_record?) %>
  </div>
	<div class="field">
    <%= f.label :number_of_days, "Days" %><br />
    <%= f.number_field :number_of_days, :min => 1, 
			:disabled => (@trip.payment_status != Trip::NOT_PAID and !@trip.new_record?) %>
	</div>

	<div class="field">
		<%= f.label :rooms %>
	</div>
	<div class="nested_form">
		<%= f.fields_for :trip_rooms %>
		<% if (@trip.payment_status == Trip::NOT_PAID or @trip.new_record?) %>
			<%= f.link_to_add "Add new", :trip_rooms %><br/>
		<% end %>
	</div>

	<div class="field">
		<%= f.label :value_added_services %>
	</div>
	<div class="nested_form">
		<%= f.fields_for :vas_bookings %>
		<%= f.link_to_add "Add new", :vas_bookings %><br/>
	</div>

	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :payment_status %><br />
		<p><span class="highlight">
    	<%= @trip.payment_status %>
		</span></p>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :total_price %><br />
		<p><span class="highlight">
			<%= number_to_currency(@trip.total_price) %>
		</span></p>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :discount, "Discount" %><br />
   	<%= f.number_field :discount, :min => 0 %>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :tac, "TAC" %><br />
   	<%= f.number_field :tac, :min => 0 %>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :tds, "TDS on TAC" %><br />
		<p><span class="highlight">
			<%= number_to_currency(@trip.tds) %>
		</span></p>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :final_price %><br />
		<p><span class="highlight">
			<%= number_to_currency(@trip.final_price) %>
		</span></p>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :paid %><br />
		<p><span class="highlight">
			<%= number_to_currency(@trip.paid) %>
		</span></p>
	<% end %>
	<%= hidden_div_if(@trip.new_record?, class: "field") do %>
    <%= f.label :balance_payment %><br />
		<p><span class="highlight">
			<%= number_to_currency(@trip.balance_payment) %>
		</span></p>
	<% end %>
	<%= hidden_div_if(@trip.pay_by_date == nil, class: "field") do %>
   	<%= f.label :pay_by_date, "Pay balance by" %><br />
   	<%= f.date_select :pay_by_date, :start_year => Time.now.year,
			:end_year => Time.now.year + 1, :prompt => true, :disabled => true %>
	<% end %>
	<%= hidden_div_if(@trip.refund_amount == 0, class: "field") do %>
    <%= f.label :refund_amount %><br />
		<p><span class="highlight">
			<%= number_to_currency(@trip.refund_amount) %>
		</span></p>
	<% end %>
	<div class="field">
   	<%= f.label :invoice_date %><br />
   	<%= f.date_select :invoice_date, :start_year => Time.now.year,
			:end_year => Time.now.year + 1, :prompt => true %>
	</div>

	<div class="field">
    <%= f.label :food_preferences %><br />
    <%= f.text_field :food_preferences %>
  </div>
	<div class="field">
    <%= f.label :medical_constraints, "Medical constraints" %><br />
    <%= f.text_field :medical_constraints %>
  </div>
	<div class="field">
    <%= f.label :email_ids, "Dist. email id(s)" %><br />
    <%= f.text_field :email_ids %>
  </div>
  <div class="field">
    <%= f.label :remarks, "Notes" %><br />
    <%= f.text_area :remarks, rows: 6, cols: 50 %>
  </div>
  <div class="field">
   	<%= f.label :advisor_id, "Advisor" %><br />
    <%= f.collection_select(:advisor_id,
					Advisor.scoped_by_account_id(current_user.account_id).
						order('name').find_all_by_id(@trip.advisor_id), :id, :name) %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
