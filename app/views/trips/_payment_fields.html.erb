<div class="nested_form_row">
	
	<%= f.date_select :date_received, :start_year => Time.now.year,
		:end_year => Time.now.year + 1, :prompt => {
		:year => 'Year', :month => 'Month', :day => 'Day'} %>
	
	<%= f.label :amount, "Amt" %>
	<%= f.number_field :amount, min: 1, max: 9999999 %>
	
	<%= f.label :payee_name, "Payee" %>
	<%= f.text_field :payee_name, size: 8 %>

	<%= f.label :details %>
	<%= f.text_field :details, size: 11 %>
	
	<%= f.link_to_remove "x" %>
</div>
