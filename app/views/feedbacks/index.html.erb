<h1>Listing feedbacks</h1>

<% if @feedbacks.count > 0 %>
	<table class="index_table" border="1">
	  <tr>
	    <th class="text">Model</th>
	    <th class="text">View</th>
	    <th class="text">Criticality</th>
	    <th class="text">Description</th>
	    <th class="text">Priority</th>
	    <th class="text">Status</th>
	    <th></th>
	  </tr>
	
		<% @feedbacks.each do |feedback| %>
		  <tr>
		    <td class="text"><%= feedback.model %></td>
		    <td class="text"><%= feedback.view %></td>
		    <td class="text"><%= feedback.criticality %></td>
		    <td class="text"><%= feedback.description %></td>
		    <td class="text"><%= feedback.priority %></td>
		    <td class="text"><%= feedback.status %></td>
		    <td>
		    	<%= link_to 'Edit', edit_feedback_path(feedback) %><br />
				</td>
		  </tr>
		<% end %>
	</table>
<% end %>

<div class="action_container">
	<%= link_to 'New Feedback', new_feedback_path %>
</div>
<p><%= will_paginate @feedbacks %></p>
