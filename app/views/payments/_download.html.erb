<%= form_tag "payments.csv", :method => "get", class: "download_button" do %>
	<%= hidden_div_if(true) do %>
		<%= select_date @from_date, :prefix => 'from_date', :hidden => true %>
		<%= number_field_tag :number_of_days, @number_of_days, min: 1, max: 99 %>
	<% end %>
	<%= submit_tag "Download as CSV", :name => nil %>
<% end %>
