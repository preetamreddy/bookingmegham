<h1>Guest details</h1>

<div class="show_saved_record">
<p>
  <b>Name:</b>
  <span class="saved_value"><%= @guest.name_with_title %>
</p>

<p>
  <b>Phone number:</b>
  <span class="saved_value"><%= @guest.phone_number %>
</p>

<p>
  <b>Alt. Phone number:</b>
  <span class="saved_value"><%= @guest.phone_number_2 %>
</p>

<p>
  <b>Email ID:</b>
  <span class="saved_value"><%= @guest.email_id %>
</p>

<p>
  <b>Alt. Email ID:</b>
  <span class="saved_value"><%= @guest.email_id_2 %>
</p>

<p>
  <b>Resident of:</b>
  <span class="saved_value"><%= @guest.city %>
</p>

<p>
  <b>Postal address:</b>
  <span class="saved_value"><%= @guest.postal_address %>
</p>
</div>

<div class="action_container">
	<%= link_to 'Edit', edit_guest_path(@guest) %>
  <%= link_to 'Create Trip', new_trip_path(:customer_type => @guest.class.name, :customer_id => @guest.id) %>
</div>

<%= link_to 'Back to Guest Listing', guests_path, :class => "back_link" %>
