<h1>Listing Guests</h1>

<div id="search">
	<%= render 'search' %>
</div>

<% if @records_returned == 0 %>
	<div id="error_explanation">
		<h2>Guests not found</h2>
		<ul>
			<li>Change your search conditions or click below to create a new Guest</li>
		</ul>
	</div>
<% else %>

	<table class="index_table" border="1">
		<tr>
	    <th class="text">Name</th>
	    <th class="text">Agency</th>
	    <th class="number">Phone number</th>
	    <th class="text">Email</th>
	    <th class="text">Resident of</th>
	    <th class="text">Other information</th>
			<th></th>
	  </tr>
		<% @guests.each do |guest| %>
			<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
		    <td class="nowrap"><%= guest.title + " " + guest.name %></td>
		    <td class="text"><%= guest.agency.short_name if guest.agency_id %></td>
		    <td class="number">
					<span class="nowrap"><%= guest.phone_number %></span><br/>
					<span class="nowrap"><%= guest.phone_number_2 %></span>
				</td>
		    <td class="text">
					<%= guest.email_id %><br/>
					<%= guest.email_id_2 %>
				</td>
		    <td class="text"><%= guest.resident_of %></td>
		    <td class="prewrap"><%= guest.other_information %></td>
		    <td>
					<%= link_to 'Edit', edit_guest_path(guest) %></br>
					<%= link_to 'Destroy', guest, confirm: 'Are you sure?',
									method: :delete %></br>
					<%= link_to 'View Trips', trips_path(:guest_id => guest.id) %>
				</td>
		  </tr>
		<% end %>
	</table>
<% end %>
<div class="action_container">
	<%= link_to 'New Guest', new_guest_path %>
</div>
<p><%= will_paginate @guests %></p>
