<%= form_for(@guest) do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.select :title, Guest::TITLE, prompt: 'Title' %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
 	<div class="field">
   	<%= f.label :agency_id, "Agency" %><br />
    <%= f.collection_select(:agency_id, 
					Agency.scoped_by_account_id(current_user.account_id).
						order('short_name').find(:all, :conditions => [
						'is_travel_agency = ?', 1 ]), :id, :short_name, :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :phone_number_2, "Alt. Phone number" %><br />
    <%= f.text_field :phone_number_2 %>
  </div>
  <div class="field">
    <%= f.label :email_id %><br />
    <%= f.text_field :email_id %>
  </div>
  <div class="field">
    <%= f.label :email_id_2, "Alt. Email ID" %><br />
    <%= f.text_field :email_id_2 %>
  </div>
  <div class="field">
    <%= f.label :resident_of %><br />
    <%= f.text_field :resident_of %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :other_information %><br />
    <%= f.text_area :other_information, rows: 6 %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
