<%= form_tag guests_path, :method => "get" do %>
	<%= text_field_tag :name, params[:name],
				:placeholder => "Name", :class => "name_input" %>
	<%= select_tag(:agency_id, options_for_select(
				Agency.scoped_by_account_id(current_user.account_id).
					order(:short_name).find_all_by_is_travel_agency(1).collect { |a| [a.short_name, a.id] }.
					insert(0, 'Choose Agency'), params[:agency_id])) %>
	<%= text_field_tag :phone_number, params[:phone_number],
				:placeholder => "Phone number", :class => "phone_number_input" %>
	<%= text_field_tag :email_id, params[:email_id],
				:placeholder => "Email ID", :class => "email_id_input" %>
	<%= submit_tag "Search", :name => nil %>
<% end %>
