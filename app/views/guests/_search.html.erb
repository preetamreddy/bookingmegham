<%= form_tag guests_path, :method => "get" do %>
  <%= label_tag :name %>
	<%= text_field_tag :name, params[:name], :class => "name_input" %>
  <%= label_tag :phone_number %>
	<%= text_field_tag :phone_number, params[:phone_number], :class => "phone_number_input" %>
  <%= label_tag :email_id %>
	<%= text_field_tag :email_id, params[:email_id], :class => "email_id_input" %>
  <%= submit_tag "Go", :name => nil, :class => "button black" %>
<% end %>
