<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Occupancy</th>
    <th>Number of adults</th>
    <th>Number of children between 5 and 12 years</th>
    <th>Number of rooms</th>
    <th>Trip</th>
    <th>Booking</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.occupancy %></td>
    <td><%= room.number_of_adults %></td>
    <td><%= room.number_of_children_between_5_and_12_years %></td>
    <td><%= room.number_of_rooms %></td>
    <td><%= room.trip_id %></td>
    <td><%= room.booking_id %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

