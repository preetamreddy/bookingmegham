<h1>Listing room_types</h1>

<table>
  <tr>
    <th>Property</th>
    <th>Room type</th>
    <th>Price for single occupancy</th>
    <th>Price for double occupancy</th>
		<th>Number of rooms</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @room_types.each do |room_type| %>
  <tr>
    <td><%= room_type.property.name %></td>
    <td><%= room_type.room_type %></td>
    <td><%= room_type.price_for_single_occupancy %></td>
    <td><%= room_type.price_for_double_occupancy %></td>
    <td><%= room_type.number_of_rooms %></td>
    <td><%= room_type.description %></td>
    <td><%= link_to 'Show', room_type %></td>
    <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td>
    <td><%= link_to 'Destroy', room_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

