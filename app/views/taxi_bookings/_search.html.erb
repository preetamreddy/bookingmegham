<%= form_tag taxi_bookings_path, :method => "get" do %>
	<%= label_tag :start_date, "Starting from" %>
	<%= select_date @start_date, :prefix => 'start_date' %>
	<%= label_tag :number_of_days, "For days" %>
	<%= number_field_tag :number_of_days, @number_of_days, min: 1, max: 999 %>
	<%= submit_tag "Search", :name => nil %>
<% end %>
