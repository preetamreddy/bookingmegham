<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<style>
			body {
				font-family: helvetica, verdana, arial, sans-serif;
				font-size: 20px;
				line-height: 28px;
			  margin-top: 1em;
			  border-spacing: 0;
			  border-collapse: collapse;
			  width: 100%;
			}
			.title {
				font-size: 28px;
				font-weight: bold;
				page-break-inside:avoid !important;
			}
			.heading {
				font-size: 24px;
				font-weight: bold;
				page-break-inside:avoid !important;
			}
			.text {
				font-size: 20px;
				page-break-inside:avoid !important;
			}
			.description {
				white-space: pre-wrap;
				font-style: italic;
				page-break-inside:avoid !important;
			}
			.pbi_avoid {
				page-break-inside:avoid !important;
			}	
		</style>
	</head>
	<body>
		<div id="content">
			<div>
				<span class="title"><%= @trip.guest.name %></span>
				<br />
				<span class="description"><%= l @trip.start_date %> to <%= l @trip.end_date %></span>
				<br />
				<br />
				<br />
			</div>
			<% @trip.bookings.order(:check_in_date).each do |booking| %>
				<div>
					<span class="heading"><%= l booking.check_in_date %></span>
					<span class="heading">:</span>
					<% if !(booking.guests_arriving_from == "" or booking.guests_arriving_from == nil) %>
						<span class="heading"><%= booking.guests_arriving_from %></span>
						<span class="heading">-</span>
					<% end %>
					<span class="heading"><%= booking.room_type.property.name %></span>
					<% if !(booking.distance_and_time == "" or booking.distance_and_time == nil) %>
						<span class="text"><%= "(" + booking.distance_and_time + ")" %></span>
					<% end %>
					<br />
					<% if !(booking.getting_there == "" or booking.getting_there == nil) %>
						<span colspan=6 class="description"><%= booking.getting_there %></span>
						<br />
					<% end %>
					<br />
				</div>
				<div>
					<% if booking.number_of_nights > 1 %>
						<span class="heading"><%= l (booking.check_in_date + 1) %></span>
						<% if booking.number_of_nights > 2 %>
							<span class="heading">-</span>
							<span class="heading"><%= l (booking.check_out_date - 1) %></span>
						<% end %>
						<span class="heading">:</span>
						<span class="heading"><%= booking.room_type.property.name %></span>
						<br />
						<% if !(booking.suggested_activities == "" or booking.suggested_activities == nil) %>
							<span colspan=6 class="description"><%= booking.suggested_activities %></span>
							<br />
						<% end %>
						<span class="description">Read more about </span><span class="text"><%= link_to booking.room_type.property.name, booking.room_type.property.url %></span>
						<br />
						<br />
					<% end %>
				</div>
				<div>
					<% if !(booking.getting_home == "" or booking.getting_home == nil) %>
						<span class="heading"><%= l (booking.check_out_date) %></span>
						<br />
						<span colspan=6 class="description"><%= booking.getting_home %></span>
						<br />
					<% end %>
				</div>
			<% end %>
		</div>
	</body>
</html>
