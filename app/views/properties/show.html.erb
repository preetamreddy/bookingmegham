<h1>Property details</h1>

<div class="show_saved_record">
<p>
  <b>Name:</b>
  <span class="saved_value"><%= @property.name %></span>
</p>
<p>
  <b>Location:</b>
  <span class="saved_value"><%= @property.city %></span>
</p>
<p>
  <b>Own property?:</b>
  <span class="saved_value"><%= @property.ensure_availability_before_booking.to_english %></span>
</p>
<p>
  <b>Allow online avl check:</b>
  <span class="saved_value"><%= @property.allow_online_availability_check.to_english %></span>
</p>
<p>
  <b>CGST rate for Food:</b>
	<span class="saved_value"><%= number_to_percentage(@property.cgst_rate_for_food, :precision => 1) %></span>
</p>
<p>
  <b>SGST rate for Food:</b>
	<span class="saved_value"><%= number_to_percentage(@property.sgst_rate_for_food, :precision => 1) %></span>
</p>
<p>
  <b>CGST rate for Tour Operator Services:</b>
	<span class="saved_value"><%= number_to_percentage(@property.cgst_rate_for_tour_operator_services, :precision => 1) %></span>
</p>
<p>
  <b>SGST rate for Tour Operator Services:</b>
	<span class="saved_value"><%= number_to_percentage(@property.sgst_rate_for_tour_operator_services, :precision => 1) %></span>
</p>
<p>
  <b>Price for driver:</b>
  <span class="saved_value"><%= number_to_currency(@property.price_for_driver) %></span>
</p>
<p>
  <b>URL:</b>
  <span class="saved_value"><%= @property.url %></span>
</p>
<p>
  <b>Email:</b>
  <span class="saved_value"><%= @property.email %></span>
</p>
<p>
  <b>Phone number:</b>
  <span class="saved_value"><%= @property.phone_number %></span>
</p>
<p>
  <b>Alt. Phone number:</b>
  <span class="saved_value"><%= @property.phone_number_2 %></span>
</p>
<p>
  <b>Address:</b>
  <span class="saved_value"><%= @property.address %></span>
</p>
<p>
  <b>Activities:</b>
  <span class="saved_value"><%= @property.suggested_activities %></span>
</p>
</div>

<div class="action_container">
	<%= link_to 'Edit', edit_property_path(@property) %>
</div>

<%= link_to 'Back to Property Listing', properties_path, 
			:class => "back_link" %>
