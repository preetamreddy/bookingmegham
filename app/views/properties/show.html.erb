<h1>Property details</h1>

<div class="show_saved_record">
<p>
  <b>Name:</b>
  <span class="saved_value"><%= @property.name %></span>
</p>
<p>
  <b>City / Village:</b>
  <span class="saved_value"><%= @property.city %></span>
</p>
<p>
  <b>Own property?:</b>
  <span class="saved_value"><%= @property.ensure_availability_before_booking.to_english %></span>
</p>
<p>
  <b>Phone number:</b>
  <span class="saved_value"><%= @property.phone_number %></span>
</p>
<p>
  <b>Alt. Phone number:</b>
  <span class="saved_value"><%= @property.phone_number_2 %></span>
</p>
<p>
  <b>Email:</b>
  <span class="saved_value"><%= @property.email %></span>
</p>
<p>
  <b>URL:</b>
  <span class="saved_value"><%= @property.url %></span>
</p>
<p>
  <b>Price for driver:</b>
  <span class="saved_value"><%= number_to_currency(@property.price_for_driver) %></span>
</p>
<p>
  <b>Service tax rate:</b>
	<span class="saved_value"><%= number_to_percentage(@property.service_tax_rate, :precision => 2, 
						:strip_insignificant_zeros => true) %></span>
</p>
<p>
  <b>Address:</b>
  <span class="saved_value"><%= @property.address %></span>
</p>
<p>
  <b>Activities:</b>
  <span class="saved_value"><%= @property.suggested_activities %></span>
</p>
</div>

<div class="action_container">
	<%= link_to 'Edit', edit_property_path(@property) %>
</div>

<%= link_to 'Back to Property Listing', properties_path, 
			:class => "back_link" %>
