<%= form_for(@property, :validate => true) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this Property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :city, "Location" %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
	<%= f.label :ensure_availability_before_booking, "Own property?" %>
	<%= f.check_box :ensure_availability_before_booking %>
  </div>
  <div class="field">
	<%= f.label :allow_online_availability_check, "Online avl check?" %>
	<%= f.check_box :allow_online_availability_check %>
  </div>
  <div class="field">
    <%= f.label :cgst_rate_for_food %><br />
    <%= f.number_field :cgst_rate_for_food %>
    <%= tooltip('CGST rate for Food', :hover) %>
  </div>
  <div class="field">
    <%= f.label :sgst_rate_for_food %><br />
    <%= f.number_field :sgst_rate_for_food %>
    <%= tooltip('SGST rate for Food', :hover) %>
  </div>
  <div class="field">
    <%= f.label :cgst_rate_for_tour_operator_services %><br />
    <%= f.number_field :cgst_rate_for_tour_operator_services %>
    <%= tooltip('CGST rate for Tour Operator Services', :hover) %>
  </div>
  <div class="field">
    <%= f.label :sgst_rate_for_tour_operator_services %><br />
    <%= f.number_field :sgst_rate_for_tour_operator_services %>
    <%= tooltip('SGST rate for Tour Operator Services', :hover) %>
  </div>
  <div class="field">
    <%= f.label :price_for_driver %><br />
    <%= f.number_field :price_for_driver, :min => 0 %>
  </div>
  <div class="field">
    <%= f.label :url, "URL" %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_number, "Phone numbers" %><br />
    <%= f.text_field :phone_number %>
    <%= f.text_field :phone_number_2 %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :suggested_activities, "Activities" %><br />
    <%= f.text_area :suggested_activities, rows: 6 %>
    <%= tooltip('Activities', :hover) %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
