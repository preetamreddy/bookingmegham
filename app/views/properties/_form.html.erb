<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this Property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
	<div class="field">
		<%= f.label :ensure_availability_before_booking %>
		<%= f.check_box :ensure_availability_before_booking, default: 1 %>
	</div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :phone_number_2, "Alt. Phone number" %><br />
    <%= f.text_field :phone_number_2 %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :url, "URL" %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :price_for_driver %><br />
    <%= f.number_field :price_for_driver, :min => 0 %>
  </div>
  <div class="field">
    <%= f.label :service_tax_rate %><br />
    <%= f.text_field :service_tax_rate %>
  </div>
  <div class="field">
    <%= f.label :suggested_activities, "Activities" %><br />
    <%= f.text_area :suggested_activities, rows: 6 %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
