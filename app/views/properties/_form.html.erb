<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this Property from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :agency, "Agency" %><br />
		<% if @property.new_record? %>
			<%= f.collection_select(:agency_id,
						Agency.order('name').find_all, :id, :name) %>
		<% else %>
			<%= f.collection_select(:agency_id,
						Agency.order('name').find_all_by_id(@property.agency_id),
						:id, :name) %>
		<% end %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :phone_number_2, "Alt. Phone number" %><br />
    <%= f.text_field :phone_number_2 %>
  </div>
  <div class="field">
    <%= f.label :price_for_children_below_5_years, 
					"Price for children below 5" %><br />
    <%= f.number_field :price_for_children_below_5_years, :min => 0 %>
  </div>
  <div class="field">
    <%= f.label :price_for_children_between_5_and_12_years,
					"Price for children btw 5 and 12" %><br />
    <%= f.number_field :price_for_children_between_5_and_12_years, :min => 0 %>
  </div>
  <div class="field">
    <%= f.label :price_for_triple_occupancy %><br />
    <%= f.number_field :price_for_triple_occupancy, :min => 0 %>
  </div>
  <div class="field">
    <%= f.label :price_for_driver %><br />
    <%= f.number_field :price_for_driver, :min => 0 %>
  </div>
  <div class="field">
    <%= f.label :ensure_availability_before_booking, 
					'Ensure availability' %><br />
    <%= f.check_box :ensure_availability_before_booking %>
  </div>
  <div class="field">
    <%= f.label :consider_blocked_rooms_as_booked, 
					'Consider blocked as booked' %><br />
    <%= f.check_box :consider_blocked_rooms_as_booked %>
  </div>
	
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :suggested_activities %><br />
    <%= f.text_area :suggested_activities, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
