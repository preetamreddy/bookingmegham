<h1>Listing vas_bookings</h1>

<table>
  <tr>
    <th>Trip</th>
    <th>Booking</th>
    <th>Value added service</th>
    <th>Unit price</th>
    <th>#</th>
    <th>Total price</th>
    <th></th>
    <th></th>
  </tr>

<% @vas_bookings.each do |vas_booking| %>
  <tr>
    <td><%= vas_booking.trip_id %></td>
    <td><%= vas_booking.booking_id %></td>
    <td><%= vas_booking.value_added_service %></td>
    <td><%= number_to_currency(vas_booking.unit_price) %></td>
    <td><%= vas_booking.number_of_units %></td>
    <td><%= number_to_currency(vas_booking.total_price) %></td>
    <td><%= link_to 'Show', vas_booking %></td>
    <td><%= link_to 'Edit', edit_vas_booking_path(vas_booking) %></td>
    <td><%= link_to 'Destroy', vas_booking, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

