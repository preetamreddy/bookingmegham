<%= form_for(@trek_booking) do |f| %>
  <% if @trek_booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trek_booking.errors.count, "error") %> prohibited this trek_booking from being saved:</h2>

      <ul>
      <% @trek_booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= hidden_div_if(@trek_booking.new_record?, class: "field") do %>
		<%= f.label :id, "Trek Booking ID" %><br />
		<p><span class="highlight">
			<%= @trek_booking.id %>
		</span></p>
	<% end %>

  <div class="field">
    <%= f.label :trip_id %><br />
		<% if @trek_booking.trip_id %>
			<%= f.collection_select(:trip_id,
						Trip.find_all_by_id(@trek_booking.trip_id), :id, :long_name) %>
		<% else %>
			<%= f.collection_select(:trip_id, Trip.
						joins('JOIN guests ON guests.id = trips.guest_id').
						order('guests.name, trips.name').all, :id, :long_name) %>
		<% end %>
  </div>
  <div class="field">
    <%= f.label :trek_id %><br />
		<%= f.collection_select(:trek_id, Trek.order('name').all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
		<%= f.date_select :start_date, :start_year => Time.now.year,
			:end_year => Time.now.year + 1, :prompt => true %>
  </div>
	<div class="field">
		<%= f.label :number_of_days, "Days" %>
		<%= f.number_field :number_of_days, min: 1 %>
	</div>
  <div class="field">
    <%= f.label :origin %><br />
    <%= f.text_field :origin %>
  </div>
  <div class="field">
    <%= f.label :final_destination %><br />
    <%= f.text_field :final_destination %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
