<%= form_for(@taxi, :validate => true) do |f| %>
  <% if @taxi.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@taxi.errors.count, "error") %> prohibited this taxi from being saved:</h2>

      <ul>
      <% @taxi.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :agency_id, "Operator" %><br />
		<% if @taxi.agency_id %>
		  <p><span class="highlight">
			  <%= @taxi.agency.name %>
		  </span></p>
		<% else %>
      <%= autocomplete_field_tag 'agency', '', autocomplete_agency_name_agencies_path,
        :id_element => "#taxi_agency_id" %>
		<% end %>
    <%= f.text_field :agency_id, :hidden => true %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :max_passengers %><br />
    <%= f.number_field :max_passengers %>
  </div>
  <div class="field">
    <%= f.label :unit_price %><br />
    <%= f.number_field :unit_price %>
  </div>
  <div class="field">
    <%= f.label :terrain_limitations %><br />
    <%= f.text_area :terrain_limitations, :rows => 6 %>
  </div>
  <div class="action_container">
    <%= f.submit %>
  </div>
<% end %>
