<div class="new_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>

	<fieldset>
		<legend>Log In</legend>
		<%= form_tag do %>
			<div class="field">
				<%= label_tag :name, 'Name:' %><br />
				<%= text_field_tag :name, params[:name] %>
			</div>
			<div class="field">
				<%= label_tag :password, 'Password:' %><br />
				<%= password_field_tag :password, params[:password] %>
			</div>
			<div class="action_container">
				<%= submit_tag "Login" %>
			</div>
		<% end %>
	</fieldset>
</div>
