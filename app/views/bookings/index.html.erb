<h1>Listing Bookings</h1>

<% if !session[:guest_id] %>
	<div id="search">
		<%= render 'search' %>
	</div>
<% end %>

<% if @records_returned == 0 %>
	<div id="error_explanation">
		<h2>Bookings not found</h2>
		<ul>
			<% if session[:trip_id] %>
				<li>Click below to create a new Booking</li>
			<% else %>
				<li>Change your search conditions</li>
			<% end %>
		</ul>
	</div>
<% else %>	
	<% if notice %>
		<p id="error"><%= notice %></p>
	<% end %>

	<table class="index_table" border="1">
		<tr>
			<th class="number">ID</th>
			<th class="text">Guest</th>
			<th class="text">Rooms</th>
			<th class="text"># People</th>
			<th class="text">Arriving from</th>
			<th class="text">Price</th>
			<th class="text">Medical constraints</th>
			<th></th>
		</tr>
	
		<% @bookings.each do |booking| %>
		  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
				<td class="number">
					<%= booking.id %>
				</td>
		    <td class="text">
					<span class="nowrap"><%= booking.trip.guest.name %></span><br/>
		    	<span class="nowrap"><%= booking.trip.guest.phone_number %></span>
				</td>
		    <td class="text">
		    	<%= booking.room_type.property.name %></br>
		      <span class="nowrap"><%= pluralize(booking.number_of_rooms, 
								booking.room_type.room_type) %></span></br>
		    	<span class="nowrap"><%= l booking.check_in_date, :format => :short %> to <%= l booking.check_out_date, :format => :short %></span><br/>
					(<%= booking.number_of_nights %> nights)
				</td>
		    <td class="text">
					Adults: <%= booking.number_of_adults %><br/>
					<% if booking.number_of_children_between_5_and_12_years != 0 %>
		    		<span class="nowrap">Children btw 5 & 12: <%= booking.number_of_children_between_5_and_12_years %></span><br/>
					<% end %>
					<% if booking.number_of_children_below_5_years != 0 %>
		    		<span class="nowrap">Children below 5: <%= booking.number_of_children_below_5_years %></span><br/>
					<% end %>
					<% if booking.number_of_drivers != 0 %>
						Drivers: <%= booking.number_of_drivers %>
					<% end %>
				</td>
		    <td class="text">
		    	<%= booking.guests_arriving_from %><br/>
					<% if booking.guests_arrival_time %>
						@ <%= l booking.guests_arrival_time, :format => :short %>
					<% end %>
				</td>
				<td class="number">
					<span class="nowrap"><%= number_to_currency(booking.total_price) %></span><br/>
				</td>
		    <td class="text"><%= booking.medical_constraints %></td>
		
		    <td class='link'>
					<%= link_to 'Show details', booking %><br/>
					<% if booking.trip.payment_status == Trip::NOT_PAID %>
		    		<%= link_to 'Edit', edit_booking_path(booking) %><br/>
		    		<%= link_to 'Destroy', booking, confirm: 'Are you sure?', 
									method: :delete %>
					<% end %>
				</td>
		  </tr>
		<% end %>
	</table>
<% end %>

<% if session[:trip_id] %>
	<div class="action_container">
		<%= link_to 'New Booking', new_booking_path %>
		<%= link_to 'Availability Chart', availability_chart_path %>
	</div>
<% end %>
<p><%= will_paginate @bookings %></p>
