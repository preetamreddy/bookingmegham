<div class="nested_form_row">
	<%= f.text_field :value_added_service, size: 30 %>

	<%= f.label :unit_price, "Unit price" %>
	<%= f.number_field :unit_price, min: 0, max: 9999 %>

	<%= f.label :number_of_units, "#" %>
	<%= f.number_field :number_of_units, min: 0, max: 99 %>

	<%= f.check_box :every_day, :default => 0 %>
	<%= f.label :every_day, "All days" %>

	<%= f.link_to_remove "x" %>
</div>	
