<!DOCTYPE html>
<html>
<head>
  <title>My Bookings</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= image_tag("EZBook.jpg") %>
		<% if user_signed_in? %>
			<div id="user_info">
				<%= current_user.email %><br />
				<%= render 'devise/menu/login_items' %>
			</div>
		<% end %>
	</div>

	<div id="columns">
		<% if user_signed_in? %>
			<div id="side">
				<%= hidden_div_if(!session[:guest_id], id: 'session_info') do %>
					<table>
						<tr>
							<th class="heading" colspan=2>Bookings for</th>
							<th class="clear"><%= link_to 'Clear', 
													guests_path(:clear => 1) %></th>
						</tr>
						<% if session[:guest_id] %>
							<% guest = Guest.find(session[:guest_id]) %>
							<%= render(guest) %>
						<% end %>
						<% if session[:trip_id] %>
							<% trip = Trip.find(session[:trip_id]) %>
							<%= render(trip) %>
							<%= render(trip.rooms) %>
							<% if trip.bookings.any? %>
								<tr>
									<td colspan=3><b>Itinerary</b></td>
								</tr>
								<%= render(trip.bookings.order('check_in_date')) %>
							<% end %>
							<% if trip.trek_bookings.any? %>
								<tr>
									<td colspan=3><b>Treks</b></td>
								</tr>
								<%= render(trip.trek_bookings) %>
							<% end %>
						<% end %>
					</table>
				<% end %>
				<dl>
					<dt>Booking Mgmt</dt>
					<dd><%= link_to 'Guests', guests_path %></dd>
					<dd><%= link_to 'Trips', trips_path %></dd>
					<dd><%= link_to 'Room Bookings', bookings_path %></dd>
					<dd><%= link_to 'Treks', trek_bookings_path %></dd>
					<dd><%= link_to 'Transport', taxi_bookings_path %></dd>
					<dd><%= link_to 'Payments', payments_path %></dd>
					<dd><%= link_to 'Availability Chart', availability_chart_path %></dd>
					<dd><%= link_to 'Booking Chart', booking_chart_path %></dd>
					<dt>Booking Admin</dt>
					<dd><%= link_to 'Properties', properties_path %></dd>
					<dd><%= link_to 'Room Types', 
										room_types_path(:property_id => nil) %></dd>
					<dd><%= link_to 'Value Added Services', 
										value_added_services_path %></dd>
					<dd><%= link_to 'Taxis', taxis_path %></dd>
					<dd><%= link_to 'Treks', treks_path %></dd>
					<dd><%= link_to 'New Property', new_property_path %></dd>
					<dd><%= link_to 'Agencies', agencies_path %></dd>
					<dt>Feedback</dt>
					<dd><%= link_to 'Give Feedback', new_feedback_path %></dd>
					<% if current_user.agency.name == 'EZBook' %>
						<dt>System Admin</dt>
						<dd><%= link_to 'Advisors', advisors_path %></dd>
						<dd><%= link_to 'Users', users_path %></dd>
						<dd><%= link_to 'Feedback', feedbacks_path %></dd>
					<% end %>
				</dl>
			</div>
		<% end %>
		<div id="main">
			<p id="notice"><%= notice %></p>
			<p id="error"><%= alert %></p>
			<%= yield %>
		</div>
	</div>
</body>
</html>
