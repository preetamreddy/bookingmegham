<!DOCTYPE html>
<html>
<head>
  <title>My Booking Megham</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= image_tag("logo.jpg") %>
		<%= @page_title || "Booking Megham" %>
	</div>
	<div id="columns">
		<div id="side">
			<%= hidden_div_if(!session[:guest_id], id: 'session_info') do %>
				<table>
					<tr>
						<th class="heading" colspan=2>Bookings for</th>
						<th class="clear"><%= link_to 'Clear', 
												guests_path(:clear => 1) %></th>
					</tr>
					<% if session[:guest_id] %>
						<% guest = Guest.find(session[:guest_id]) %>
						<%= render(guest) %>
					<% end %>
					<% if session[:trip_id] %>
						<% trip = Trip.find(session[:trip_id]) %>
						<%= render(trip) %>
						<%= render(trip.rooms) %>
						<% if trip.bookings.any? %>
							<tr>
								<td colspan=3><b>Itinerary</b></td>
							</tr>
							<%= render(trip.bookings.order('check_in_date')) %>
						<% end %>
						<% if trip.vas_bookings.any? %>
							<tr>
								<td colspan=3><b>Value Added Services</b></td>
							</tr>
							<%= render(trip.vas_bookings) %>
						<% end %>
					<% end %>
				</table>
			<% end %>
			<dl>
				<dt>Property Mgmt</dt>
				<dd><%= link_to 'Properties', properties_path %></dd>
				<dd><%= link_to 'Room Types', 
									room_types_path(:property_id => nil) %></dd>
				<dd><%= link_to 'Value Added Services', 
									value_added_services_path %></dd>
				<dt>Booking Mgmt</dt>
				<dd><%= link_to 'Guests', guests_path %></dd>
				<dd><%= link_to 'Trips', trips_path %></dd>
				<dd><%= link_to 'Bookings', bookings_path %></dd>
				<dd><%= link_to 'Availability Chart', availability_chart_path %></dd>
				<dt>Feedback</dt>
				<dd><%= link_to 'Give Feedback', new_feedback_path %></dd>
				<dd><%= link_to 'Feedback List', feedbacks_path %></dd>
			</dl>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
