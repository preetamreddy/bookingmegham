<!DOCTYPE html>
<html>
<head>
  <title>EZBook</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= image_tag("EZBook.jpg") %>
	</div>
	<div id="columns">
		<div id="main">
			<p id="notice"><%= notice %></p>
			<p id="error"><%= alert %></p>
			<%= yield %>
		</div>
	</div>
</body>
</html>
