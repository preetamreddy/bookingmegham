<table class="heading_table">
	<% if @consider_blocked_rooms_as_booked.to_i == 1 %>
		<tr>
			<td>
				<h1 "id="avl_chart_h1">Availability Chart (including blocked rooms)</h1>
			</td>
			<td class="sub_text">
				<%= link_to 'Ignore blocked rooms', 
							availability_chart_path(
								:consider_blocked_rooms_as_booked => 0,
								:chart_start_date => @chart_start_date,
								:number_of_days => @number_of_days) %>
			</td>
		</tr>
	<% else %>
		<tr>
			<td>
				<h1 id="avl_chart_h1">Availability Chart (ignoring blocked rooms)</h1>
			<td class="avl_chart_link">
				<%= link_to 'Include blocked rooms',
							availability_chart_path(
								:consider_blocked_rooms_as_booked => 1,
								:chart_start_date => @chart_start_date,
								:number_of_days => @number_of_days) %>
			</td>
		</tr>
	<% end %>
</table>

<div id="new_booking"></div>

<div id="search">
	<% if !session[:trip_id] %>
		<p>
			<%= render 'search' %>
		</p>
	<% end %>
</div>

<div id="chart">
	<%= render 'availability_chart' %>
</div>
