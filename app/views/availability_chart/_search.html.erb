<%= form_tag availability_chart_path, :method => "get" do %>
	<%= label_tag :chart_start_date, "From *" %>
  <%= text_field_tag :chart_start_date, (@chart_start_date.to_s(:ddmonyyyy) if @chart_start_date),
    :id => "availability_chart_start_date", :readonly => true, :required => true, size: 10 %>
	<%= label_tag :chart_end_date, "To *" %>
  <%= text_field_tag :chart_end_date, (@chart_end_date.to_s(:ddmonyyyy) if @chart_end_date),
    :id => "availability_chart_end_date", :readonly => true, :required => true, size: 10 %>
	<%= label_tag :rooms_required, "For rooms *" %>
	<%= number_field_tag :rooms_required, @rooms_required, min: 1, max: 99, size: 2 %>
  <%= submit_tag "Go", :name => nil, :class => "button black" %>
<% end %>
